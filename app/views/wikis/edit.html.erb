<h1>Edit Wiki</h1>
<% if current_user %>
    
    <div>
        Collaborators: <br>
        <% @wiki.collaborators.each do |c| %>
            <% user = User.find(c.user_id) %>
            <p><%= user.email %></p>
            <%= link_to "Delete", c, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this collaborator?'} %>
        <% end %>
    </div>
    <div>
            <%= form_for Collaborator.new do |f| %>
                <p><%= f.text_field :email, class: 'form-control' %></p>
                
                <% f.hidden_field :wiki_id, :value => params[:wiki_id] %>
                <% f.hidden_field :user_id, :value => params[:user_id] %>
                <%= params %>
                <%= f.submit 'Add Collaborator' %>
            <% end %>
    </div>
<% end %>
<div class="col-md-8">
     <%= render partial: 'form', locals: { wiki: @wiki } %>
</div>