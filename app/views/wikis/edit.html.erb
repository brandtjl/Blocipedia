<h1>Edit Wiki</h1>
<% if current_user %>
    
    <div>
        Collaborators: <br>
        <% @wiki.collaborators.each do |c| %>
            <% user = User.find(c.user_id) %>
            <% form_for @collaborator do |f| %>
                <p><%= user.email %></p>
                <%= link_to "Delete", @collaborators, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
                <p><% f.text_field :user.email, @user.email %>
                <% f.hidden_field :wiki_id, @wiki_id %>
                <% f.hidden_field :user_id, @user_id %>
                <% f.submit 'Add Collaborator' %>
            <% end %>
        <% end %>
    </div>
<% end %>
<div class="col-md-8">
     <%= render partial: 'form', locals: { wiki: @wiki } %>
</div>