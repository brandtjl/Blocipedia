<div class="container">
    <div class="col-md-12 text-center">
        <h2>Blocipedia: Social, Markdown Wikis</h2>
    </div>


    <div class="col-md-12 text-center">
        <h4>Create and share Markdown Wikis</h4>
    </div>

    <div class="col-md-12 text-center">
        <% if current_user %>
            <%= link_to "View Wikis", wikis_path %>
        <% else %>
            <button type="button" class="btn btn-outline-primary">
            <%= button_to "Sign Up", new_user_registration_path, :class => 'navbar-link', :method => :get %>
            </button>
        <% end %>
    </div>
    <% if current_user %>
        <div class="row"> 
            <div class="col-md-6 text-right">
                <h5>Create as many public </br> wikis as you want!</h5>
            </div>
            <div class="col-md-6 text-left">
                <h5>Create private wikis!</h5>
            </div>
        </div>

        <div class="col-md-6 text-right">
            <button type="button" class="btn btn-outline-primary">
            <%= button_to "Free Plan", about_path, :method => :get %>
            </button>
        </div>
        <div class="col-md-6 text-left">
            <button type="button" class="btn btn-success">
            <%= button_to "Premium Plan", new_charge_path, :method => :get %>
            </button>
        </div>
    <% end %>
</div>